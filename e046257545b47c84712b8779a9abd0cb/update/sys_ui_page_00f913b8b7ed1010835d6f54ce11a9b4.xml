        <category>general</category>
        <client_script><![CDATA[function validateRejectionReason() {
	var rejectedState = 4;
	var rejectionReason = trim(gel("rejection_reason_textarea").value);
	
	if (rejectionReason == "") {
		alert(getMessage("Please enter a rejection reason."));
		return false;
	}
	
	g_form.setValue("rejection_reason", rejectionReason);
	g_form.setValue("state", rejectedState);
	g_form.save();
}]]></client_script>
        <description>Modal content which allows user to provide a reason for rejecting deployment request</description>
        <direct>false</direct>
        <endpoint>sn_app_eng_studio_reject_deployment_request.do</endpoint>
        <html><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
	<table width="100%">
		<tr>
			<td>
				<p>
					${gs.getMessage("Please provide a rejection reason. The details will be emailed to the user who created the request.")}
				</p>
			</td>
		</tr>
		<tr>
			<td>
				<g:ui_multiline_input_field
					id="rejection_reason_textarea"
					name="rejection_reason_textarea"
					label="Rejection Reason"
					mandatory="true"
				/>
			</td>
		</tr>
		<tr id="dialog_buttons">
			<td align="right">
				<g:dialog_buttons_ok_cancel
					ok="return validateRejectionReason()"
					ok_type="button"
					cancel_type="button"
				/>
			</td>
		</tr>
	</table>
</j:jelly>]]></html>
